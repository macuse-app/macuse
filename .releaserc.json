{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/sync-manifest-version.js && pnpm run pack && node -e \"const fs=require('fs');const m=fs.readdirSync('.').filter(f=>f.endsWith('.mcpb'))[0];if(m&&m!=='macuse.mcpb')fs.renameSync(m,'macuse.mcpb');\" && node scripts/update-server-json.js"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "manifest.json", "server.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "macuse.mcpb",
            "name": "macuse-${nextRelease.version}.mcpb",
            "label": "macuse-${nextRelease.version}.mcpb"
          },
          {
            "path": "server.json",
            "name": "server.json",
            "label": "server.json"
          }
        ]
      }
    ]
  ]
}
